@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
@using (Html.BeginForm())
{
<fieldset>
    <legend>登入</legend>
    <ol>
        <li>
            帳號：@Html.TextBox("account")
        </li>
        <li>
            密碼：@Html.Password("password")
        </li>
    </ol>
    <input type="submit" value="登入" />
</fieldset>
}

